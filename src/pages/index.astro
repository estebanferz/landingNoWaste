---
import Layout from '../layouts/Layout.astro';
import AnimatedSection from '../components/AnimatedSection';
import '@/styles/global.css'

const sections = [
  { title: "Welcome", content: "Scroll down to see more animations!", bgColor: "bg-blue-200" },
  { title: "About Us", content: "We create amazing experiences.", bgColor: "bg-green-200" },
  { title: "Our Services", content: "Web design, development, and more.", bgColor: "bg-yellow-200" },
  { title: "Contact", content: "Get in touch with us today!", bgColor: "bg-red-200" },
];
---

<Layout title="NoWaste">
	<main class="min-h-screen flex flex-col overflow-y-auto">
		<header class="p-5 fixed top-0 left-0 right-0 bg-white z-10">
			<div class="ml-10">
				<img src="../../nowaste-monografia.png" alt="Your Logo" class="h-8" />
			</div>
		</header>

		<section id="home" class="min-h-screen flex flex-col pt-20 place-content-center">
			<img src="../../nowaste-logo.png" class="container h-28 w-auto mx-auto mb-5 drop-shadow-xl shadow-black"></img>
			<div class="container mx-auto px-4 text-center">
				<p class="text-xl md:text-2xl mb-8">Conectando comerciantes con clientes</p>
				<form class="max-w-md mx-auto">
					<div class="flex gap-2">
						<input 
							type="email" 
							placeholder="Enter your email" 
							class="flex-grow px-4 py-2 rounded-l-lg border-2 border-gray-300 focus:outline-none focus:border-blue-500"
							required
						/>
						<button 
							type="submit"
							class="px-6 py-2 bg-green-900 text-white rounded-r-lg hover:bg-blue-600 transition duration-300 flex items-center"
						>
							<span>Anotarme</span>
						</button>
					</div>
				</form>
			</div>
		</section>

		<section id="about" class="min-h-screen flex items-center bg-lightGreen">
			<div class="container mx-auto px-4 text-center text-white">
				<h2 class="text-4xl md:text-5xl font-bold mb-4">Sobre nosotros</h2>
				<p class="text-xl md:text-2xl mb-8">Somos 5 chicos</p>
			</div>
		</section>

		<section id="project" class="min-h-screen w-full flex items-center bg-white">
			<div class="md:order-1 flex flex-col md:flex-row w-full">
				<div class="order-2 md:w-auto lg:w-1/3 flex justify-center ml-5">
					<img src="../../iphone-border2.png" class="h-auto w-32 md:w-72"/>
				</div>
				<div class="order-1 md:order-2 container xs:px-5 lg:px-10 text-black md:w-2/3">
					<h2 class="mt-3 uppercase text-3xl md:text-5xl font-bold mb-4">proyecto</h2>
					<div class="grid grid-rows-3 lg:grid-rows-1 lg:grid-cols-3 space-y-2 lg:space-y-0 lg:space-x-2 text-white items-center drop-shadow-xl shadow-black lg:mt-10">
						<div class="bg-lightGreen rounded-lg text-center place-content-center h-32 lg:h-44">
							<h3 class="font-bold">BUSCAR ALIMENTO</h3>
							<p>parrafo</p>
						</div>
						<div class="bg-lightGreen rounded-lg text-center place-content-center h-32 lg:h-44">
							<h3 class="font-bold">HACER LA COMPRA</h3>
							<p>parrafo</p>
						</div>
						<div class="bg-lightGreen rounded-lg text-center place-content-center h-32 lg:h-44">
							<h3 class="font-bold">CUIDAR MEDIO AMBIENTE</h3>
							<p>parrafo</p>
						</div>
					</div>
				</div>
			</div>
		</section>

		<footer class="p-5 fixed rounded-full shadow-lg bottom-3 left-1/2 transform -translate-x-1/2 bg-white z-10">
			<div class="container mx-auto flex justify-center gap-4">
				<a href="#home" class="text-gray-400 hover:text-gray-600 ">
					Principal
				</a>
				<a href="#about" class="text-gray-400 hover:text-gray-600">
					Quienes somos?
				</a>
				<a href="#project" class="text-gray-400 hover:text-gray-600">
					Proyecto
				</a>
			</div>
		</footer>
	</main>
</Layout>