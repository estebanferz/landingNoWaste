---
import Layout from '../layouts/Layout.astro';
import AnimatedSection from '../components/AnimatedSection';
import '@/styles/global.css'

const sections = [
  { title: "Welcome", content: "Scroll down to see more animations!", bgColor: "bg-blue-200" },
  { title: "About Us", content: "We create amazing experiences.", bgColor: "bg-green-200" },
  { title: "Our Services", content: "Web design, development, and more.", bgColor: "bg-yellow-200" },
  { title: "Contact", content: "Get in touch with us today!", bgColor: "bg-red-200" },
];
---

<Layout title="NoWaste">
	<main class="min-h-screen flex flex-col">
		<header class="p-5 fixed top-0 left-0 right-0 bg-white z-10">
			<div class="ml-10">
				<img src="../../nowaste-monografia.png" alt="Your Logo" class="h-8" />
			</div>
		</header>

		<section id="home" class="min-h-screen flex flex-col pt-20 place-content-center">
			<img src="../../nowaste-logo.png" class="container h-24 w-auto mx-auto mb-5"></img>
			<div class="container mx-auto px-4 text-center">
				<p class="text-xl md:text-2xl mb-8">Be the first to know when we launch.</p>
				<form class="max-w-md mx-auto">
					<div class="flex gap-2">
						<input 
							type="email" 
							placeholder="Enter your email" 
							class="flex-grow px-4 py-2 rounded-l-lg border-2 border-gray-300 focus:outline-none focus:border-blue-500"
							required
						/>
						<button 
							type="submit"
							class="px-6 py-2 bg-blue-500 text-white rounded-r-lg hover:bg-blue-600 transition duration-300 flex items-center"
						>
							<span>Notify Me</span>
						</button>
					</div>
				</form>
			</div>
		</section>

		<section id="about" class="min-h-screen flex items-center bg-green-200">
			<div class="container mx-auto px-4 text-center">
				<h2 class="text-4xl md:text-5xl font-bold mb-4">Sobre nosotros</h2>
				<p class="text-xl md:text-2xl mb-8">Somos 5 putos</p>
			</div>
		</section>

		<section id="project" class="min-h-screen flex items-center bg-green-200">
			<div class="container mx-auto px-4 text-center">
				<h2 class="text-4xl md:text-5xl font-bold mb-4">About Us</h2>
				<p class="text-xl md:text-2xl mb-8">Somos una empresa!</p>
			</div>
		</section>

		<footer class="p-5 fixed rounded-full shadow-lg bottom-3 left-1/2 transform -translate-x-1/2 bg-white z-10">
			<div class="container mx-auto flex justify-center gap-4">
				<a href="#home" class="text-gray-400 hover:text-gray-600 scroll-link">
					Principal
				</a>
				<a href="#about" class="text-gray-400 hover:text-gray-600">
					Quienes somos?
				</a>
				<a href="#project" class="text-gray-400 hover:text-gray-600">
					Proyecto
				</a>
			</div>
		</footer>
	</main>
</Layout>

<script>
document.addEventListener('DOMContentLoaded', (event) => {
	const scrollLinks = document.querySelectorAll('.scroll-link');
	
	scrollLinks.forEach(link => {
		link.addEventListener('click', (e) => {
			e.preventDefault();
			const targetId = link.getAttribute('href'); // Obtiene el href con el '#'
			
			if (targetId && targetId.startsWith('#')) { // Verifica si el targetId comienza con '#'
				const targetElement = document.querySelector(targetId); // Usa el targetId directamente en querySelector
				
				if (targetElement) {
					targetElement.scrollIntoView({
						behavior: 'smooth',
						block: 'start'
					});
				} else {
					console.error(`Elemento no encontrado para el id: ${targetId}`);
				}
			} else {
				console.error(`El href no es v√°lido: ${targetId}`);
			}
		});
	});
});

</script>

<style>
	main {
		scroll-behavior: smooth;
		overflow-y: auto;
		height: 100vh;
	}
</style>